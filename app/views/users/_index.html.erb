<div class="row mt-5 w-50">
      <% users.each do |user| %>
        <div class="one-post card mt-3">
          <div class="d-flex">
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, size: '50x50', fallback: "no_image.svg", class: "mt-3 profile-img" %>
            <% end %>
            <%= link_to user_path(user), class: "user-link" do %>
              <p class="caption h4 mt-4"><%= user.name %></p>
              <% if user.personal_color.present? %>
                <p class="caption">パーソナルカラー：<%= user.personal_color %></p>
              <% else %>
                <p class="caption">パーソナルカラー：未設定</p>
              <% end %>
              <p class="caption"><%= "#{user.posts.count} 投稿" %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @users %>