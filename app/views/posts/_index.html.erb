  <div class="row mt-3 mb-3 align-self-end">
      <%= form_with method: :get, local: true do |f| %>
        <%= f.text_field :search, value: params[:search] %>
        <%= f.submit '検索する', name: nil %>
      <% end %>
  </div>

  <% if @posts.any? %>
  <div class="row mt-5 index-left w-100">
    <% @posts.each do |post| %>
      <div class="one-post col-sm-4 mb-3">
        <%= link_to post_path(post) do %>
          <p class="caption"><%= post.user.name %></p>
          <% if post.user.personal_color.present? %>
            <p class="caption">パーソナルカラー：<%= personal_color_name(post.user.personal_color) %></p>
          <% end %>
          <%= attachment_image_tag post, :image, format: 'jpeg', size: '300x200' %>
          <p class="caption"><%= post.location %></p>
          <p class="caption"><%= "#{post.comments.count} コメント" %></p>

          <% if post.tags.present? %>
            <div class="caption tags">
              <% post.tags.each do |tag| %>
                <span class="tag">#<%= tag.name %></span>
              <% end %>
            </div>
          <% end %>
        <% end %>

        <% if current_user.bookmark?(post) %>
          <%= button_to 'ブックマーク解除', post_bookmark_path(post), method: :delete, class: 'btn btn-outline-danger mt-2' %>
        <% else %>
          <%= button_to 'ブックマーク', post_bookmark_path(post), method: :post, class: 'btn btn-outline-primary mt-2' %>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= paginate @posts %>
<% else %>
  <div class="text-center mt-5">
    <p>一致する投稿はありません。</p>
  </div>
<% end %>

  <%= paginate @posts %>